<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :part_id, class: "form-label" %>
    <%= form.text_field :part_id,  class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :part_name,  class: "form-label" %>
    <%= form.text_field :part_name, class: "form-control" %>
  </div>

  <div>
    <%= form.label :status, class: "form-label" %>
  </div>

  <div class="form-group mb-3">
    <div class="form-check form-check-inline">
        <%= form.radio_button :status, 'Suspend', class: "form-check-input" %>
        <%= form.label :status_suspend, "Suspend", class: "form-check-label" %>
    </div>
    <div class="form-check form-check-inline">
        <%= form.radio_button :status, 'Active', class: "form-check-input" %>
        <%= form.label :status_active, "Active", class: "form-check-label" %>
    </div>
  </div>

  <br>

  <div>
    <%= link_to "Cancel", products_path, class: "btn btn-danger" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
