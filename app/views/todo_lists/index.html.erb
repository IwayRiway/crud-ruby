<p style="color: green"><%= notice %></p>

<h1>Todo lists</h1>

<div id="todo_lists">
    <div class="row">
        <% @todo_lists.each do |todo_list| %>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-header">
                        <strong><%= todo_list.name %></strong>
                    </div>
                    <ul class="list-group list-group-flush">
                        <% no = 0 %>
                        <% todo_list.tasks.each do |data| %>
                            <li class="list-group-item"><%= "#{no=no+1}. #{data.name}" %></li>
                        <% end %>
                    </ul>
                    <div class="card-footer btn-toolbar">
                        <div class="btn-toolbar">
                            <%= link_to 'Edit', edit_todo_list_path(todo_list), class:"btn btn-sm btn-outline-success me-1" %>
                            <%= button_to "Delete", todo_list, method: :delete, class:"btn btn-sm btn-outline-danger me-1" %>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

<%= link_to "New todo list", new_todo_list_path %>
