<p style="color: green"><%= notice %></p>

<h1>Todo lists</h1>

<div id="todo_lists">
  <% @todo_lists.each do |todo_list| %>
    <p>
        <strong>Name:</strong>
        <%= todo_list.name %>
    </p>

    <% 
        no=0
        todo_list.tasks.each do |data| %>
        <p><%= "#{no=no+1}. #{data.name}" %> </p>
    <% end %>

    <p>
      <%= link_to "Show this todo list", todo_list %>
    </p>
  <% end %>
</div>

<%= link_to "New todo list", new_todo_list_path %>
