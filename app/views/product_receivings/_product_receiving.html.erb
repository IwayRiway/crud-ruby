<div id="<%= dom_id product_receiving %>">
    <div class="card text-bg-dark">
        <div class="card-header">
            <strong>Document number:</strong>
            <%= product_receiving.document_number %>
            <span class="mx-2"> | </span>
            <strong>Document date:</strong>
            <%= product_receiving.document_date %>
            <span class="mx-2"> | </span>
            <strong>Status:</strong>
            <%= product_receiving.status %>
        </div>
        <div class="card-body">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% no=0 %>
                    <% @product_receiving.product_receiving_items.each do |data| %>
                        <% if data.status == 'Active' %>
                            <tr>
                                <th scope="row"><%= no=no+1%></th>
                                <td><%= data.product.part_name%></td>
                                <td><%= data.quantity%></td>
                                <td><%= data.status%></td>
                            </tr>
                        <% end %>
                    <% end %>
                  </tbody>
            </table>
            
            <div class="btn-toolbar">
                <%= link_to "Kembali", product_receivings_path, class: "btn btn-primary me-2" %>
                <%= link_to "Ubah", edit_product_receiving_path(@product_receiving), class: "btn btn-success me-2" %>
                <%= button_to "Hapus", @product_receiving, method: :delete, class: "btn btn-danger" %>
            </div>
            
        </div>
    </div>
</div>