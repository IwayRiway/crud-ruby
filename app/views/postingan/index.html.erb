<h1>HALAMAN POSTINGAN</h1>
<p>Find me in app/views/postingan/index.html.erb</p>

<% if flash[:pesan] %>
    <div class="alert alert-dark alert-dismissible fade show" role="alert">
        <%= flash[:pesan]%>
    </div>
<% end%>

<a href="/postingan/input" class="btn btn-primary btn-sm mb-2">Tambah</a>
<table class="table table-striped table-bordered table-hover table-dark">
    <thead class="thead-dark">
      <tr>
        <th>No</th>
        <th>Judul</th>
        <th>Deskripsi</th>
        <th>Aksi</th>
      </tr>
    </thead>
    <tbody>
        <% 
            no=0 
            @data.each do |item| 
        %>

            <tr>
                <td><%= no=no+1 %></td>
                <td><%= item.judul %></td>
                <td><%= item.deskripsi %></td>
                <td>
                    <a href="/postingan/detail/<%= item.id %>" class="btn btn-outline-success btn-sm me-1">Lihat</a>
                    <a href="/postingan/edit/<%= item.id %>" class="btn btn-outline-warning btn-sm me-1">Ubah</a>
                    <a href="/postingan/delete/<%= item.id %>" OnClick="return confirm('Yakin Hapus Data Ini...?')" class="btn btn-outline-danger btn-sm">Hapus</a>
                </td>
            </tr>

        <% end %>
    </tbody>
  </table>

<script>
$( document ).ready(function() {
    console.log( "ready!" );
});
</script>